<h1>Listing units</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Base cost</th>
      <th>Unit type</th>
      <th>Faction</th>
      <th>Model count</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @units.each do |unit| %>
      <tr>
        <td><%= unit.name %></td>
        <td><%= unit.base_cost %></td>
        <td><%= unit.unit_type ? unit.unit_type.name : '' %></td>
        <td><%= unit.faction ? unit.faction.name : '' %></td>
        <td><%= unit.model_count %></td>
        <td><%= link_to 'Show', unit %></td>
        <td><%= link_to 'Edit', edit_unit_path(unit) %></td>
        <td><%= link_to 'Destroy', unit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

